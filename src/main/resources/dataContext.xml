<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="pl.aetas.gtweb.data" />

    <bean name="mongoDbUri" class="java.lang.String">
       <constructor-arg value="mongodb://localhost" />
    </bean>

    <bean name="gtWebDb" factory-bean="mongoConnector" factory-method="getGtWebDatabase"/>

    <bean name="tagsCollection" factory-bean="collectionsFactory" factory-method="getCollection">
        <constructor-arg value="tags" />
    </bean>

    <bean name="tasksCollection" factory-bean="collectionsFactory" factory-method="getCollection">
        <constructor-arg value="tasks" />
    </bean>

    <bean name="usersCollection" factory-bean="collectionsFactory" factory-method="getCollection">
        <constructor-arg value="users" />
    </bean>

    <bean name="sessionsCollection" factory-bean="collectionsFactory" factory-method="getCollection">
        <constructor-arg value="sessions" />
    </bean>

    </beans>